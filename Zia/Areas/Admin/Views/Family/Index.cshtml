@model IEnumerable<Family>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Family List </h2>
    </div>
    <div class="col-6 text-right">
        <partial name="_btnCreateNewPartial"/>
    </div>
</div>
@if (Model.Count() == 0)
{
    <p> No items found .... </p>
}
else
{
<table class="table table-striped border">
    <tr class="table-secondary">
        <th>
            @Html.DisplayNameFor(m => m.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Discrption)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Nots)
        </th>
        <th></th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(i => item.Name)
    </td>
    <td>
        @Html.DisplayFor(i => item.Discrption)
    </td>
    <td>
        @Html.DisplayFor(m=>item.Nots)
    </td>
    <td>
        <partial name="_TableBtnDeletEditDeatails" model="@item.Id"/>
    </td>

</tr>
        
    }
</table>

}