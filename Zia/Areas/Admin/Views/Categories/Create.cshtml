@model Zia.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discreption" class="control-label"></label>
                <input asp-for="Discreption" class="form-control" />
                <span asp-validation-for="Discreption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamilyId" class="control-label"></label>
                <select asp-for="FamilyId" class ="form-control" asp-items="ViewBag.FamilyId"></select>
            </div>
            <div class="form-group">
               <partial name="_backToListAndCreartBtn"/>
            </div>
        </form>
    </div>
</div>

