@model IEnumerable<Zia.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <partial name="_btnCreateNewPartial"/>
</p>
@if (Model.Count() > 0) {
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discreption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th></th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discreption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family.Name)
            </td>
            <td>
                <partial name="_TableBtnDeletEditDeatails" model="item.Id"/>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <p>No Data ....</p>
}