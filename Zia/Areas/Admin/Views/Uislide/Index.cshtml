@model IEnumerable<Zia.Models.Uislide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> UI List </h2>
    </div>
    <div class="col-6 text-right">
        <partial name="_btnCreateNewPartial"/>
    </div>
</div>
@if (Model.Count() == 0)
{
    <p> No items found .... </p>
}
else
{
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Img)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.IsActive)
            </th>
            <th></th>
            <th>
                Action
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(i => item.Name)
                </td>
                <td>
                    <img src="@item.Img" width="50px"/>
                </td>
                <td>
                    @Html.DisplayFor(m=>item.IsActive)
                </td>
                <td>
                    <partial name="_TableBtnDeletEditDeatails" model="@item.Id"/>
                </td>

            </tr>
        
        }
    </table>

}