@*@model IndexViewModel*@
<div class="col-10 mx-auto col-md-6 col-lg-9 my-3">
    <div class="row">
        
            @foreach (var singleCategoty in Model.Category)
            {
                <a asp-action="Details" asp-route-id="@singleCategoty.Id" asp-area="Customer">
                    @*@singlItem.Category.Name*@
                </a>

                <!-- single category -->
                <div class="col-md-6 col-lg-3 my-3">
                    <div class="category-container">
                        <img src="@singleCategoty.Name"
                             class="img-fluid category-img"
                             alt="category img " />
                        <a href="products.html" class="category-link">
                            <h6 class="text-uppercase mb-0">@singleCategoty.Discreption</h6>
                            <p class="mb-0 text-yellow">20 items</p>
                        </a>
                    </div>
                </div>

            }
        
    </div>
</div>